{
  "name": "kitzo",
  "version": "2.0.25",
  "description": "A lightweight JavaScript UI micro-library.",
  "type": "module",
  "main": "./dist/kitzo.umd.js",
  "exports": {
    ".": {
      "import": "./dist/kitzo.esm.js",
      "require": "./dist/kitzo.umd.js",
      "types": "./dist/kitzo.d.ts"
    },
    "./react": {
      "import": "./dist/react.esm.js",
      "types": "./dist/react.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rollup -c",
    "preview": "vite preview"
  },
  "keywords": [
    "tooltip",
    "ripple",
    "copy-button",
    "micro-library",
    "modular",
    "ui",
    "javascript",
    "react",
    "kitzo"
  ],
  "author": "Riyad",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/riyad-96/kitzo"
  },
  "homepage": "https://github.com/riyad-96/kitzo#readme",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-react": "^7.27.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@vitejs/plugin-react": "^5.0.4",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rollup": "^4.46.2",
    "vite": "^7.0.4"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  }
}
